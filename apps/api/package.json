    "ioredis": "^5.9.3",
    "lucia": "^3.2.2",
    "pino": "^10.3.1",
    "postgres": "^3.4.8",
    "resend": "^6.9.2",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "drizzle-kit": "^0.31.9",
